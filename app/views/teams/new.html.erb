<!-- Validation failure messages -->
<% if @team.errors.any? %>
  <% @team.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Team</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_team" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for divison_league -->
      <div class="form-group">
        <label for="divison_league" class="control-label">
          Divison league
        </label>

        <input type="text" id="divison_league" name="divison_league" placeholder="Divison league" class="form-control" value="<%= @team.divison_league %>">
      </div>

      <!-- Label and input for schedule -->
      <div class="form-group">
        <label for="schedule" class="control-label">
          Schedule
        </label>

        <input type="text" id="schedule" name="schedule" placeholder="Schedule" class="form-control" value="<%= @team.schedule %>">
      </div>

      <!-- Label and input for when_play -->
      <div class="form-group">
        <label for="when_play" class="control-label">
          When play
        </label>

        <input type="text" id="when_play" name="when_play" placeholder="When play" class="form-control" value="<%= @team.when_play %>">
      </div>

      <!-- Label and input for location_id -->
      <div class="form-group">
        <label for="location_id" class="control-label">
          Location
        </label>

        <%= select_tag(:location_id, options_from_collection_for_select(Location.all, :id, :field, @team.location_id), :class => "form-control") %>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @team.name %>">
      </div>

      <button class="btn btn-success">
        Create Team
      </button>
      or
      <a href="/teams">Cancel</a>
    </form>
  </div>
</div>
