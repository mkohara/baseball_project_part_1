<div class="page-header">
  <h1>
    Players
    <a href="/players/new" class="btn btn-lg btn-success">New Player</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "players_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :scout_id, "Scout" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :scout_id_gteq, :class => "form-control", :placeholder => "Scout greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :scout_id_lteq, :class => "form-control", :placeholder => "Scout less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :position_cont, "Position contains" %>
    <%= f.text_field :position_cont, :class => "form-control", :placeholder => "Position contains" %>
  </div>

<div class="form-group">
          <%= f.label :dob, "Dob" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dobgteqPicker'>
                  <%= f.text_field :dob_gteq, :class => "form-control", :placeholder => "Dob greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='doblteqPicker'>
                  <%= f.text_field :dob_lteq, :class => "form-control", :placeholder => "Dob less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dobgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#doblteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#dobgteqPicker').on("dp.change", function (e) {
                  $('#doblteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#doblteqPicker').on("dp.change", function (e) {
                  $('#dobgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :team_divison_league_cont, "Team divison_league contains" %>
      <%= f.text_field :team_divison_league_cont, :class => "form-control", :placeholder => "Team divison_league contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/players" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#players_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Scout</th>
        <th>Team</th>
        <th>Name</th>
        <th>Dob</th>
        <th>Position</th>
        <th>Actions</th>
      </tr>

      <% @players.each do |player| %>
      <tr>
        <td><%= player.scout_id %></td>
        <td>
          <% if player.team.present? %>
            <a href="/teams/<%= player.team.id %>">
              <%= player.team.divison_league %>
            </a>
          <% end %>
        </td>
        <td><%= player.name %></td>
        <td><%= player.dob %></td>
        <td><%= player.position %></td>
        <td>
          <a href="/players/<%= player.id %>" class="btn btn-primary">Show</a>
          <a href="/players/<%= player.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_player/<%= player.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @players, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
