<div class="page-header">
  <h3>Schedule #<%= @schedule.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Home team</dt>
      <dd><%= @schedule.home_team_id %></dd>

      <dt>Away team</dt>
      <dd><%= @schedule.away_team_id %></dd>

      <dt>Location</dt>
      <dd><%= @schedule.location_id %></dd>

      <dt>Event date</dt>
      <dd><%= @schedule.event_date %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/schedules" class="btn btn-primary">
        Back
      </a>
      <a href="/schedules/<%= @schedule.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_schedule/<%= @schedule.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
