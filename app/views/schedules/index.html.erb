<div class="page-header">
  <h1>
    Schedules
    <a href="/schedules/new" class="btn btn-lg btn-success">New Schedule</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Home team</th>
        <th>Away team</th>
        <th>Location</th>
        <th>Event date</th>
        <th>Actions</th>
      </tr>

      <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.home_team_id %></td>
        <td><%= schedule.away_team_id %></td>
        <td><%= schedule.location_id %></td>
        <td><%= schedule.event_date %></td>
        <td>
          <a href="/schedules/<%= schedule.id %>" class="btn btn-primary">Show</a>
          <a href="/schedules/<%= schedule.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_schedule/<%= schedule.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
