<div class="page-header">
  <h1>
    Assigned players
    <a href="/assigned_players/new" class="btn btn-lg btn-success">New Assigned player</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Scout</th>
        <th>Player</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @assigned_players.each do |assigned_player| %>
      <tr>
        <td><%= assigned_player.scout.email %></td>
        <td><%= assigned_player.player.scout_id %></td>
        <td><%= assigned_player.name %></td>
        <td>
          <a href="/assigned_players/<%= assigned_player.id %>" class="btn btn-primary">Show</a>
          <a href="/assigned_players/<%= assigned_player.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_assigned_player/<%= assigned_player.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
