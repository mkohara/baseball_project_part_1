<!-- Validation failure messages -->
<% if @assigned_player.errors.any? %>
  <% @assigned_player.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Assigned Player #<%= @assigned_player.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_assigned_player/<%= @assigned_player.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">




      <!-- Label and input for player_id -->
      <div class="form-group">
        <label for="player_id" class="control-label">
          Player
        </label>

        <%= select_tag(:player_id, options_from_collection_for_select(Player.all, :id, :scout_id, @assigned_player.player_id), :class => "form-control") %>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @assigned_player.player.name %>">
      </div>

      <button class="btn btn-warning">
        Update Assigned Player
      </button>
      or
      <a href="/assigned_players/<%= @assigned_player.id %>">Cancel</a>
    </form>
  </div>
</div>
