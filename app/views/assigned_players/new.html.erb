<!-- Validation failure messages -->
<% if @assigned_player.errors.any? %>
  <% @assigned_player.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Assigned Player</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_assigned_player" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for scout_id -->
      <input type="hidden" name="scout_id" value="<%= current_admin_user %>">

      <!-- Label and input for player_id -->
      <div class="form-group">
        <label for="player_id" class="control-label" >
          Player
        </label>
        <%= select_tag(:player_id, options_from_collection_for_select(Player.all, :id, :name,  @assigned_player.player_id), :class => "form-control") %>
      </div>

      
      <button class="btn btn-success">
        Create Assigned Player
      </button>
      or
      <a href="/assigned_players">Cancel</a>
    </form>
  </div>
</div>
