<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "events_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :held_at, "Held at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='held_atgteqPicker'>
                  <%= f.text_field :held_at_gteq, :class => "form-control", :placeholder => "Held at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='held_atlteqPicker'>
                  <%= f.text_field :held_at_lteq, :class => "form-control", :placeholder => "Held at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#held_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#held_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#held_atgteqPicker').on("dp.change", function (e) {
                  $('#held_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#held_atlteqPicker').on("dp.change", function (e) {
                  $('#held_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :home_team_divison_league_cont, "Team divison_league contains" %>
      <%= f.text_field :home_team_divison_league_cont, :class => "form-control", :placeholder => "Team divison_league contains" %>
    </div>

<div class="form-group">
      <%= f.label :away_team_divison_league_cont, "Team divison_league contains" %>
      <%= f.text_field :away_team_divison_league_cont, :class => "form-control", :placeholder => "Team divison_league contains" %>
    </div>

<div class="form-group">
      <%= f.label :location_field_cont, "Location field contains" %>
      <%= f.text_field :location_field_cont, :class => "form-control", :placeholder => "Location field contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/events" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#events_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Home team</th>
        <th>Away team</th>
        <th>Location</th>
        <th>Held at</th>
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td>
          <% if event.home_team.present? %>
            <a href="/teams/<%= event.home_team.id %>">
              <%= event.home_team.divison_league %>
            </a>
          <% end %>
        </td>
        <td>
          <% if event.away_team.present? %>
            <a href="/teams/<%= event.away_team.id %>">
              <%= event.away_team.divison_league %>
            </a>
          <% end %>
        </td>
        <td>
          <% if event.location.present? %>
            <a href="/locations/<%= event.location.id %>">
              <%= event.location.field %>
            </a>
          <% end %>
        </td>
        <td><%= event.held_at %></td>
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @events, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
