<div class="page-header">
  <h3>Scout #<%= @scout.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @scout.email %></dd>

      <dt>Password</dt>
      <dd><%= @scout.password %></dd>

      <dt>Name</dt>
      <dd><%= @scout.name %></dd>

      <dt>Player</dt>
