<div class="page-header">
  <h1>
    Scouts
    <a href="/scouts/new" class="btn btn-lg btn-success">New Scout</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Name</th>
        <th>Player</th>
        <th>Actions</th>
      </tr>

      <% @scouts.each do |scout| %>
      <tr>
        <td><%= scout.email %></td>
        <td><%= scout.password %></td>
        <td><%= scout.name %></td>
        <td><%= scout.player_id %></td>
        <td>
          <a href="/scouts/<%= scout.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @scouts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
